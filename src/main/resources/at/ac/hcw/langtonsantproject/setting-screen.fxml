<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" styleClass="main-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.hcw.langtonsantproject.Controller.SettingScreenController">
    <padding>
        <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
    </padding>
    <children>
        <Label text="Settings" styleClass="settings-title" />

        <GridPane hgap="15.0" vgap="15.0" alignment="CENTER">
            <Label text="Width:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="setting-label"/>
            <Slider fx:id="widthSlider" min="10" max="100" value="55" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label fx:id="widthValueLabel" text="50" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="value-display"/>

            <Label text="Height:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="setting-label"/>
            <Slider fx:id="heightSlider" min="10" max="100" value="55" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="heightValueLabel" text="50" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="value-display"/>

            <Label text="Steps:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="setting-label"/>
            <Slider fx:id="stepsSlider" min="10" max="1000" value="500" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="stepsValueLabel" text="50" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="value-display"/>

            <Label text="Start X:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="setting-label"/>
            <Slider fx:id="startXSlider" min="1" max="55" value="50" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label fx:id="startXValueLabel" text="25" GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="value-display"/>

            <Label text="Start Y:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="setting-label"/>
            <Slider fx:id="startYSlider" min="1" max="55" value="50" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label fx:id="startYValueLabel" text="25" GridPane.columnIndex="2" GridPane.rowIndex="4" styleClass="value-display"/>

            <Label text="Speed:" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="setting-label"/>
            <Slider fx:id="speedSlider" min="1" max="200" value="100" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label fx:id="speedValueLabel" text="50" GridPane.columnIndex="2" GridPane.rowIndex="5" styleClass="value-display"/>
        </GridPane>

        <Button onAction="#applySettingsClick" prefWidth="250.0" text="Start Simulation" styleClass="button" />
        <Button onAction="#backToMenuClick" prefWidth="250.0" text="Back to Menu" styleClass="button" />
    </children>
</VBox>