<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.ac.hcw.langtonsantproject.Controller.SimulationScreenController"
            prefWidth="800.0" prefHeight="600.0">
    <top>
        <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="simulation-toolbar" prefHeight="60.0">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Label fx:id="simulationScreen" text="Steps Remaining: 0" styleClass="simulation-title" />
                <Pane HBox.hgrow="ALWAYS" />
                <MenuButton text="Options" styleClass="tool-button">
                    <items>
                        <MenuItem onAction="#restartClicked" text="Restart" />
                        <MenuItem onAction="#settingsClickedInSimulation" text="Settings" />
                        <SeparatorMenuItem />
                        <MenuItem onAction="#saveClicked" text="Save Progress" />
                        <MenuItem onAction="#exitAndSaveClicked" text="Exit &amp; Save" />
                        <MenuItem onAction="#exitClicked" text="Exit" />
                    </items>
                </MenuButton>
                <Button onAction="#stepClicked" text="Step" styleClass="tool-button"/>
                <Button fx:id="pauseButton" onAction="#pauseClicked" text="Pause" styleClass="tool-button"/>
            </children>
        </HBox>
    </top>
    <center>
        <StackPane fx:id="gridHolder" alignment="CENTER" styleClass="grid-container">
            <children>
                <GridPane fx:id="gridPane" alignment="CENTER" styleClass="simulation-grid" />
            </children>
        </StackPane>
    </center>
</BorderPane>